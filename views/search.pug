    .friendslist
      b
        label User List
      ul#friend-list
        
        each val in userArr
          - if (val.isPublic || val.friends.includes(reqUser))
            form(action="/users/" + val.username method="GET")
              li.friend
                img(src=val.profilePic)
                .name
                  | #{val.username} 
                button.viewProf(type='submit')  view profile
                if val.isOnline
                  span.dot2(style='background-color: green;')
                else
                  span.dot2

